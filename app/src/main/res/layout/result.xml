<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/resultat"
        android:layout_width="279dp"
        android:layout_height="116dp"
        android:text="Resultat"
        android:gravity="center"
        android:textSize="24sp"
        app:autoSizeTextType="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.172"


        />

    <Button
        android:id="@+id/tornar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Tornar_al_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultat"
        app:layout_constraintVertical_bias="0.872" />

    <TextView
        android:id="@+id/paraulares"
        android:layout_width="271dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="paraula"
        android:textSize="24sp"
        app:autoSizeTextType="none"
        app:layout_constraintBottom_toTopOf="@+id/tornar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultat"
        app:layout_constraintVertical_bias="0.192" />

    <TextView
        android:id="@+id/puntuacion"
        android:layout_width="80dp"
        android:layout_height="39dp"
        android:text="Puntuacio: "
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/tornar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paraulares"
        app:layout_constraintVertical_bias="0.873" />

    <TextView
        android:id="@+id/respostausuari"
        android:layout_width="281dp"
        android:layout_height="52dp"
        android:gravity="center"
        android:text="respostaUser"
        android:textSize="14sp"
        app:autoSizeTextType="none"
        app:layout_constraintBottom_toTopOf="@+id/puntuacion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paraulares" />
</androidx.constraintlayout.widget.ConstraintLayout>